<div class="container">
	<h5><%= current_user.name%> Dashboard</h5>
	<%# render "adminmenu"%>
	<div class="card">
  		<div class="card-body">
			<div class="row">
				<div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-2"><strong>Şirket Mail Adresi:</strong></div>
				<div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-2"><%= current_user.email %></div>
			</div>
			<%= turbo_frame_tag "user" do %>
			<div class="row">
				<div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-2"><strong>Şirket Adı: </strong></div>
				<div class="col-6 col-sm-6 col-md-4 col-lg-6 col-xl-6"><%= current_user.name%></div>
			</div>
			<div class="row">
				<div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-2"><strong>Muhasebe Mail Adresi: </strong></div>
				<div class="col-6 col-sm-6 col-md-4 col-lg-6 col-xl-6"><%= current_user.muhasebe_mail%></div>
			</div>
			 <%= link_to "Şirket Bilgileri Güncelleme", edit_user_path(@user), class:"btn btn-secondary btn-sm mt-2" %>
			<% end %>
			<%= link_to "Şifre Güncelleme", edit_user_registration_path, class:"btn btn-primary btn-sm mt-2" %>
		</div>
	</div>

	
</div>