<div style="max-width:480px; margin:auto;">
  <div class="card">
    <h5 class="card-header">Şirket Bilgileri Güncelleme Sayfası</h5>
    <div class="card-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"%>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="mb-3">
            <%= f.label :"Yeni şifre" %> <i>(Şifrenizi değiştirmek istemiyorsanız boş bırakabilirsiniz)</i><br />
            <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control" %>
            <% if @minimum_password_length %>
              <em>Minimum <%= @minimum_password_length %> karakter</em>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :"Yeni şifre tekrarı" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :"Mevcut Şifre" %> <i>(Değişiklikleri onaylamak için mevcut şifreniz gereklidir)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" ,class:"form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Bilgileri güncelle", class:"btn btn-primary"%>
          </div>
        <% end %>
        <br/>
        <hr/>
        <h3>Üyeliğinizi iptal etmek için</h3>

        <p><%= button_to "Şirket üyeliğini iptal et", registration_path(resource_name), data: { confirm: "Emin misiniz?" },   method: :delete, html: { data: { turbo: false} }, class:"btn btn-danger" %></p>

        <%= link_to "Geri", :back %>

    </div>       
  </div>        
</div>
